main.css
/* Общие стили */
*,
*::before,
*::after {
    box-sizing: border-box;
}

body {
    font-family: 'Lato Regular', sans-serif;
    background-color: #000000;
    color: #f0f0f0;
}

.wrapper {
    display: flex;
    flex-direction: column;
    min-height: 100vh;
}

a {
    text-decoration: none;
    color: #d700fe;
    transition: color 0.3s ease;
}

a:hover {
    color: #bb00e0;
}

html {
  scroll-behavior: smooth;
}

