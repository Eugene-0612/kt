style.css
/* Стили main-top */
.main-top {
    background-color: rgba(0, 0, 0, 0.9);
    color: #d700fe;
    padding: 25px;
    display: flex;
    justify-content: space-between;
    align-items: center;
    box-shadow: 0 4px 10px rgba(0, 0, 0, 0.3);
    position: sticky;
    top: 0;
    z-index: 100;
}

/* Стили для логотипа */
.logo {
    font-size: 1.8em;
    font-weight: 700;
    letter-spacing: 1px;
}

.logo i {
    margin-right: 8px;
}

/* Стили для основного меню (ul) */
.main-menu {
    list-style: none;
    padding: 0;
    margin: 0;
    display: flex;
}

/* Стили для ссылок в меню (a) */
.main-menu-item a {
    color: #d700fe;
    text-decoration: none;
    margin-left: 25px;
    font-size: 1.3rem;
    display: block;
}

/* Стили для меню-бургера (скрыт по умолчанию) */
.menu-toggle {
    display: none;
    font-size: 1.5rem;
    cursor: pointer;
}

/* header */
.hero {
    font-family: 'Lato Bold';
    position: relative;
    color: white;
    padding: 80px;
    text-align: center;
    border-radius: 15px;
    margin-bottom: 40px;
    box-shadow: 0 6px 15px rgba(0, 0, 0, 0.4);
    overflow: hidden;
    height: 50vh;
}

/* Изображение на всю ширину */
.hero-image {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    opacity: 0.5;
    z-index: 1;
}

.hero-content {
    position: relative;
    z-index: 2;
}

.hero h1 {
    font-size: 3.9em;
    margin-bottom: 15px;
